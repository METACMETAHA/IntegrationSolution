<UserControl x:Class="IntegrationSolution.Dialogs.PartialViews.OkCancelPartialView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IntegrationSolution.Dialogs.PartialViews"
             xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls">

    <StackPanel
      Orientation="Horizontal" HorizontalAlignment="Right"
      Margin="10">
        <Button Command="{Binding OkCommand}" Content="OK" IsDefault="True"
                        HorizontalAlignment="Right"
                        Width="100" Margin="10" Style="{DynamicResource AccentedSquareButtonStyle}"/>
        <Button Command="{Binding CancelCommand}" Content="Cancel" IsCancel="True"
                        HorizontalAlignment="Right"
                        Width="100" Margin="10" Style="{DynamicResource SquareButtonStyle}"/>
    </StackPanel>

</UserControl>
