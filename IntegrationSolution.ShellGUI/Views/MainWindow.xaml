<Window x:Class="IntegrationSolution.ShellGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegrationSolution.ShellGUI"
        xmlns:views="clr-namespace:Integration.Infrastructure.Views;assembly=Integration.Infrastructure"
        xmlns:prism="http://www.codeplex.com/prism"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <views:HeaderView Grid.Row="0"/>

        <!--Wizard progress bar control-->
        <views:BodyView Grid.Row="1"/>

        <views:FooterView Grid.Row="2"/>

    </Grid>

</Window>
